@model List<MemoViewModel>
@{
    ViewData["Title"] = "Index";
}
@section Styles{
    <link href="~/lib/datatables/css/jquery.dataTables.css" rel="stylesheet" />
    <link href="~/lib/datatables/css/dataTables.bootstrap4.css" rel="stylesheet" />
}
<div id="PlaceHolderHere"></div>

<p>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#createModal" id="toggleModal">Create</button>
</p>
<table class="table" id="MemoTable">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Note
            </th>
            <th>
                CreatedAt
            </th>
            <th>
                StatusId
            </th>
            <th>
                UserId
            </th>            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Note)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StatusId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>           
            </tr>
        }
    </tbody>
</table>
<partial model="new CreateMemoViewModel { }" name="_MemoModalPartial" />
<div id="editModalContainer">

</div>
@section Scripts{
    <script src="~/lib/datatables/js/jquery.dataTables.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.js"></script>

    <script>
        $(document).ready(function () {
            $('#MemoTable').DataTable({
                "ajax": {
                    "url": 'Memo/GetFilteredItems',
                    "type": "POST",
                    "dataType": "json",
                    data: function (settings) {
                        obj = settings;
                    }

                },
                "columns": [
                    { "data": "title", "name": "Title" },
                    { "data": "note", "name": "Note" },
                    { "data": "createdAt", "name": "CreatedAt" },
                    { "data": "statusId", "name": "StatusId" },
                    { "data": "userId", "name": "UserId" }
                ],
                "serverSide": true,
                "order": [0, "asc"],
                "processing": true,
                "searching": true,
                "paging": true

            });
            $('.btn.edit').click(event => {
                const id = $(event.currentTarget).data("id");
                $("#editModalContainer").load(`/Memo/Edit/${id}`, _ => $("#editModal").modal("show"));
            });
        });
    </script>
}


